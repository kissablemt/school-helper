<view class="info-cont">
  <view class="infoMain">
    <!--photo-->
     <!-- bindtap="setPhotoInfo" -->
    <view class="info-items">
      <text>头像</text>
      <view class="infotext">
        <image wx:if="{{open_id}}" class="userinfo-avatar" src="cloud://envir-i8vdp.656e-envir-i8vdp/avatar/{{open_id}}.jpg" background-size="cover"></image>

      </view>
    </view> 

    <!--name-->
    <view class="info-items" bindtap="setName">
      <text>名字</text>
      <view class="infotext">
        <text class="info-motto">{{userInfo.nickname}}</text>
      </view>
    </view>
    <view class='wrapper' hidden="{{hiddenmodalput}}">
      <view class='shadow'>
        <view class='popUp'>
          <view class='title'>修改姓名</view>
          <form bindsubmit='confirmM'>
            <view class='content'>
              <input type='text' name="nickname" placeholder="请输入名字.." auto-focus=''></input>
            </view>
            <view class='foot'>
              <button bindtap='cancelM' class='cancel-btn'>取消</button>
              <button formType="submit" class='confirm-btn'>确定</button>
            </view>
          </form>
        </view>
      </view>
    </view>


    <!--school-->
    <view class="info-items" bindtap='getSchool'>
      <text>学校</text>
      <view class="infotext">
        <text class='info-motto'>{{userInfo.school.name}}</text>
      </view>
    </view>

    <!--telphone-->
    <view class='info-items' bindtap='getContact_way'>
      <text>联系方式</text>
      <view class='infotext'>
        <text class="info-motto">{{userInfo.contact_way}}</text>
      </view>
    </view>
    <view class='wrapper' hidden="{{phonemodalInput}}">
      <view class='shadow'>
        <view class='popUp'>
          <view class='title'>联系方式</view>
          <form bindsubmit='confirmP'>
            <view class='content'>
              <input type='text' name="contact_way" placeholder="请输入联系方式.." auto-focus=''></input>
            </view>
            <view class='foot'>
              <button bindtap='cancelP' class='cancel-btn'>取消</button>
              <button formType="submit" class='confirm-btn'>确定</button>
            </view>
          </form>
        </view>
      </view>
    </view>


