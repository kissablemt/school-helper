/* miniprogram/pages/activity/activity-detail/activity-detail.wxss */
.container {
  padding: 3%;
  min-height: 100%;
  margin-bottom: 30rpx;
}

.more-block {
  padding: 2%;
  display: flex;
  flex-direction: column;
}

.more-block text {
  font-size: 14px;
  font-weight: bolder;    
  word-break: keep-all;
  word-wrap: break-word;
}

.bgColor {
  margin-top: 1rpx;
  padding: 3%;
  background-color: rgb(255, 255, 255);
}

.row {
  display: flex;
  width: 100%;
}

.showContent {
  /* margin-left: 13%; */
}

.showFont{
  word-break:break-all;
  
  line-height: 20px;  /*此处与js代码有关，切莫随意更改*/
  max-height: 100%;
  overflow: hidden;
}
.showFont-hidePart{
  line-height: 20px;  /*此处与js代码有关，切莫随意更改*/
  max-height: 40px;
  overflow: hidden;
}   
.toggleMore-button{
  width: 100%;
  text-align: right;
  font-size: 30rpx;
}

.wrapper{
position: absolute;
left: 0;
right: 0;
top: 0;
bottom: 0;
display: flex;
justify-content: center;
align-items: center;
background-color: rgba(0,0,0,0.4);
z-index: 10000;
}
.shadow{
background-color: rgba(0, 0, 0, 0.5);
position: fixed;
top: 0;
bottom: 0;
left: 0;
right: 0;
}
.popUp{
z-index: 101; 
background: white;
position: fixed; 
top: 30%; 
width: 80%;
left: 10%;
border-radius: 15rpx;
}
.title{
text-align: center;
padding: 28rpx 0;
font-size: 37rpx;
font-weight: 500;
}
.content{
padding: 20rpx 30rpx;
font-size: 34rpx;
}
.reportFoot{
display: flex;
text-align: center;
border-top: 1rpx solid #DDD;
line-height: 4;
border-bottom-right-radius: 15rpx;
border-bottom-left-radius: 15rpx;
}
.reportFoot button::after {
border: none;
}
.reportFoot button {
margin: 0;
padding: 0;
flex: 1;
font-size: 32rpx;
border-radius: 0;
outline: none;
background-color: transparent;
border-top-left-radius: 0rpx;
border-top-right-radius: 0rpx;
line-height: 100rpx;
}
.confirm-btn {
border-left: 1rpx solid #DDD;
color: rgb(60, 197, 31)
}